@model Project.Models.Product

<h2>Delete Product</h2>

<p>Are you sure you want to delete this product?</p>

<div>
    <h3>@Model.Name</h3>
    <p>@Model.Description</p>
    <p>Price: @Model.Price</p>
    <p>Category: @Model.Category</p>
    <img src="@Model.PhotoSrc" alt="@Model.Name" width="100" />
</div>

<!-- Form to delete the product -->
<form asp-action="DeleteConfirmed" asp-controller="Admin" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.ID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a href="@Url.Action("ListProducts", "Admin")" class="btn btn-secondary">Cancel</a>
</form>


