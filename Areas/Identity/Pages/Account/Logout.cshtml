@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}


<div class="container">
    <div class="row justify-content-center align-items-center text-center">
        <div class="col-12 box-shadow min-vh-100 justify-content-center d-flex flex-column">


            <h2 class="text-center">@ViewData["Title"]</h2>
            @{
                if (User.Identity.IsAuthenticated)
                {
                    <form class="form-inline justify-content-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                        <button type="submit" class="nav-link btn btn-link text-info">Click here to Logout</button>
                    </form>
                }
                else
                {
                    <div class="alert alert-success">
                        <p class="text-center">You have successfully logged out of the application.</p>
                    </div>
                }
            }

        </div>
    </div>
</div>
